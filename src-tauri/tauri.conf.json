{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "工程项目管理系统",
  "version": "0.1.0",
  "identifier": "cn.zonshi.erp.pms",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "工程项目管理系统",
        "width": 1366,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false,
        "installMode": "currentUser",
        "compression": "lzma" 
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:erp.db"]
    }
  }
}
